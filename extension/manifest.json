{
  "name": "Плагин по улучшению сайта sdo.tusur.ru",
  "description": "t.me/tarodictrl",
  "version": "1.0",
  "manifest_version": 3,
  "options_page": "pages/options.html",
  "content_scripts": [
    {
      "matches": [
        "*://sdo.tusur.ru/*"
      ],
      "js": [ 
        "js/redirect.js",
        "js/filter.js"
      ],
      "run_at": "document_start",
      "web_accessible_resources": [
        "assets/options.css",
        "pages/options.html"
      ]
    }
  ],
  "host_permissions": [
    "*://sdo.tusur.ru/*"
  ],
  "permissions": [
    "storage"
  ]
}